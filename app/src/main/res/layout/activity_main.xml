<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/whatToDoText"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_vertical"
        android:text="Welcome to tic tac toe, press a field to start"
        android:textSize="18sp" />


    <Button
        android:id="@+id/newGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dip"
        android:background="#cccccc"
        android:onClick="startNewGame"
        android:text="@string/new_game" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:columnCount="3"
        android:id="@+id/table"
        android:padding="2dp"
        android:background="@drawable/border"
        >

        <ImageView

            android:background="@drawable/border"
            android:id="@+id/field0"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
             />
        <!-- NB: the layout_columnWeight and layout_rowWeight are only
             supported on API level 21 (Android 5.0) and above -->

        <ImageView
            android:background="@drawable/border"
            android:id="@+id/field1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            />

        <ImageView
            android:background="@drawable/border"
            android:id="@+id/field2"
            android:scaleType="fitCenter"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_height="0dp"
            />


        <ImageView
            android:background="@drawable/border"
            android:id="@+id/field3"
            android:layout_column="0"
            android:layout_row="1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
             />

        <ImageView
            android:background="@drawable/border"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/field4"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
           />

        <ImageView
            android:background="@drawable/border"
            android:id="@+id/field5"
            android:layout_column="2"
            android:layout_row="1"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
           />


        <ImageView
            android:background="@drawable/border"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:id="@+id/field6"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:scaleType="fitCenter"
            android:layout_height="0dp"
            />

        <ImageView
            android:background="@drawable/border"
            android:id="@+id/field7"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:scaleType="fitCenter"
            android:layout_rowWeight="1"
            android:layout_height="0dp"
           />

        <ImageView
            android:background="@drawable/border"
            android:id="@+id/field8"
            android:scaleType="fitCenter"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="0dp"
             />

    </GridLayout>
</LinearLayout>